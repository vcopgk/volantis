// 禁止选中
.not-select,
figcaption,
footer,
section,
details summary,
.article-meta,
.nav-tabs
  -webkit-touch-callout none
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none


// 隐藏文本
// <span class="bb_spoiler" title="xxx">xxxx</span>
.bb_spoiler, .bb_spoiler a, a .bb_spoiler, .bb_spoiler a.new
  cursor: $pointer,pointer
  border-bottom 1px solid
  border-color var(--color-p)
  background-color var(--color-card)
  color var(--color-card)
  text-shadow none
  padding 0 2px
  margin 0 2px

.bb_spoiler:hover, .bb_spoiler:active,
  .bb_spoiler:hover .bb_spoiler, .bb_spoiler:active .bb_spoiler
  color var(--color-p) !important

.bb_spoiler
  &:hover
    opacity 1
    transition-duration 0.3s


// 自定义 Note
div.note
  // 外星人
  &.alien::before
    content: '\f8f5'
  
  // 怪物
  &.alien-monster::before
    content: '\f8f6'

  // 蝙蝠
  &.bat::before
    content: '\f6b5'
  
  // 铃铛
  &.bell::before
    content: '\f0f3'

  // 生化病毒
  &.biohazard::before
    content: '\f780'
  
  // 大笑 - 眨眼
  &.laugh-wink::before
